{
  "name": "ai-construction-boq-manager",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@google/genai": "^1.28.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:electron": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.aistudio.boqmanager",
    "productName": "AI Construction BOQ Manager",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis"
    }
  }
}
